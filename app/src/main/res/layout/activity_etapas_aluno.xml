<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EtapasAlunoActivity">

    <ImageButton
        android:id="@+id/ibBackCriar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="?attr/actionModeCloseDrawable"
        android:onClick="onClickIbBack"
        app:layout_constraintBottom_toBottomOf="@+id/EtapasTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EtapasTitle" />

    <TextView
        android:id="@+id/EtapasTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Etapas"
        android:textColor="#00AEE5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbTermo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/ibBackCriar"
        app:layout_constraintTop_toBottomOf="@+id/EtapasTitle" />

    <TextView
        android:id="@+id/tvTermo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbTermo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbTermo"
        app:layout_constraintTop_toTopOf="@+id/cbTermo" />

    <CheckBox
        android:id="@+id/cbProjeto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cbTermo"
        app:layout_constraintTop_toBottomOf="@+id/cbTermo" />

    <TextView
        android:id="@+id/tvProjeto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbProjeto"
        app:layout_constraintEnd_toEndOf="@+id/tvTermo"
        app:layout_constraintStart_toEndOf="@+id/cbProjeto"
        app:layout_constraintTop_toTopOf="@+id/cbProjeto" />

    <CheckBox
        android:id="@+id/cbEtapa1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cbProjeto"
        app:layout_constraintTop_toBottomOf="@+id/cbProjeto" />

    <TextView
        android:id="@+id/tvEtapa1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbEtapa1"
        app:layout_constraintEnd_toEndOf="@+id/tvProjeto"
        app:layout_constraintStart_toEndOf="@+id/cbEtapa1"
        app:layout_constraintTop_toTopOf="@+id/cbEtapa1" />

    <Switch
        android:id="@+id/swEtapa1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/buttonColor"
        android:clickable="false"
        android:text="Aceite do professor"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/btAceiteEtapa1"
        app:layout_constraintEnd_toStartOf="@+id/btAceiteEtapa1"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa1"
        app:layout_constraintTop_toTopOf="@+id/btAceiteEtapa1" />

    <ImageButton
        android:id="@+id/btAceiteEtapa1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onClickObsProf"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa1"
        app:layout_constraintTop_toBottomOf="@+id/cbEtapa1"
        app:srcCompat="@drawable/downarrowimage"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/cbEtapa2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa1"
        app:layout_constraintTop_toBottomOf="@+id/btAceiteEtapa1" />

    <TextView
        android:id="@+id/tvEtapa2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbEtapa2"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa1"
        app:layout_constraintStart_toEndOf="@+id/cbEtapa2"
        app:layout_constraintTop_toTopOf="@+id/cbEtapa2" />

    <Switch
        android:id="@+id/swEtapa2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/buttonColor"
        android:clickable="false"
        android:text="Aceite do professor"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/btAceiteEtapa2"
        app:layout_constraintEnd_toStartOf="@+id/btAceiteEtapa2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa2"
        app:layout_constraintTop_toTopOf="@+id/btAceiteEtapa2" />

    <ImageButton
        android:id="@+id/btAceiteEtapa2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onClickObsProf"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa2"
        app:layout_constraintTop_toBottomOf="@+id/cbEtapa2"
        app:srcCompat="@drawable/downarrowimage"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/cbEtapa3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa2"
        app:layout_constraintTop_toBottomOf="@+id/btAceiteEtapa2" />

    <TextView
        android:id="@+id/tvEtapa3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbEtapa3"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa2"
        app:layout_constraintStart_toEndOf="@+id/cbEtapa3"
        app:layout_constraintTop_toTopOf="@+id/cbEtapa3" />

    <Switch
        android:id="@+id/swEtapa3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/buttonColor"
        android:clickable="false"
        android:text="Aceite do professor"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/btAceiteEtapa3"
        app:layout_constraintEnd_toStartOf="@+id/btAceiteEtapa3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa3"
        app:layout_constraintTop_toTopOf="@+id/btAceiteEtapa3" />

    <ImageButton
        android:id="@+id/btAceiteEtapa3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onClickObsProf"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa3"
        app:layout_constraintTop_toBottomOf="@+id/cbEtapa3"
        app:srcCompat="@drawable/downarrowimage"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/cbFinal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cbEtapa3"
        app:layout_constraintTop_toBottomOf="@+id/btAceiteEtapa3" />

    <TextView
        android:id="@+id/tvFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickEtapaTitle"
        android:text="Texto não encontrado!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbFinal"
        app:layout_constraintEnd_toEndOf="@+id/tvEtapa3"
        app:layout_constraintStart_toEndOf="@+id/cbFinal"
        app:layout_constraintTop_toTopOf="@+id/cbFinal" />

    <Switch
        android:id="@+id/swFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/buttonColor"
        android:clickable="false"
        android:text="Aceite do professor"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/btAceiteFinal"
        app:layout_constraintEnd_toStartOf="@+id/btAceiteFinal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cbFinal"
        app:layout_constraintTop_toTopOf="@+id/btAceiteFinal" />

    <ImageButton
        android:id="@+id/btAceiteFinal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onClickObsProf"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/tvFinal"
        app:layout_constraintTop_toBottomOf="@+id/cbFinal"
        app:srcCompat="@drawable/downarrowimage"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/adviseText"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAceiteFinal" />

</androidx.constraintlayout.widget.ConstraintLayout>