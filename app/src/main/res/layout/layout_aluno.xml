<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clsAluno"
            type="br.edu.uniritter.mobile.grupo_2_projeto_final.model.ClsAluno" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvNomeAluno"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/inder"
            android:text="@{clsAluno.nomeAluno + ' ' + clsAluno.sobrenome}"
            android:textAlignment="viewStart"
            android:textAppearance="@style/subTitle01"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btNomeAluno"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/rightarrow" />

    </LinearLayout>
</layout>