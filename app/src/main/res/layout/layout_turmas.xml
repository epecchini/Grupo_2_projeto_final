<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="clsTurma"
            type="br.edu.uniritter.mobile.grupo_2_projeto_final.model.ClsTurma"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="@{clsTurma.id}">


        <TextView
            android:id="@+id/tvTurma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/inder"
            android:text="@{clsTurma.nomeTurma}"
            android:textAlignment="textStart"
            android:textAppearance="@style/subTitle01"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imgbtOpen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="onClickTurmaProf"
            app:layout_constraintBottom_toBottomOf="@+id/tvAluno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEtapa"
            app:srcCompat="@drawable/rightarrow" />

        <Switch
            android:id="@+id/swLiberada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:checked="@{clsTurma.liberada}"
            android:text="Turma liberada"
            android:textAlignment="textEnd" />

        <Switch
            android:id="@+id/swEncerrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:checked="@{clsTurma.encerrada}"
            android:text="Turma encerrada"
            android:textAlignment="textEnd" />

    </LinearLayout>
</layout>